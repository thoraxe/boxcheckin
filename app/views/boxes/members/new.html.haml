%section#global
  .page-header
    %h1 Add New Member
    %p Fill out the members' details below
.row
  .span12
    = simple_form_for(@member, :as => :member, :url => boxes_members_path, :method => :post, :html => {:class => "form-horizontal"}) do |f|
      .form-inputs
        .row
          .span4
            %h2 Member Contact Info
            = f.input :name
            = f.input :address_1
            = f.input :address_2
            = f.input :city
            = f.input :state
            = f.input :zip
            = f.input :phone
          .span4
            %h2 Member Emergency Info
            = f.input :emergency_contact
            = f.input :emergency_phone
        .row
          .span12
            = f.button :submit, :class => "btn-primary"
            = link_to "Cancel", box_root_path, :class => "btn"
