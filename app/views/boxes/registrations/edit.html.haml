%section#boxes-registrations-edit
  .page-header
    %h1 Edit #{resource.name}
    %p Edit your information below
.row-fluid
  .span12
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = render :partial => "shared/box", :locals => { :f => f }
      .row-fluid
        .span6.offset6
          %hr
          = f.input :current_password, :hint => "We need your current password to confirm your changes"
          = f.button :submit, :class => "btn-primary"
          = link_to "Cancel", box_root_path, :class => "btn"
