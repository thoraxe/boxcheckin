%section#admins-boxes-new
  .page-header
    %h1 Add New Box
    %p Fill out the box's details below
.row
  .span12
    = simple_form_for(@box, :as => :box, :url => admins_boxes_path, :method => :post) do |f|
      = render :partial => "shared/box", :locals => { :f => f }
      .form-actions
        = f.button :submit, "Add Box", :class => "btn-primary"
        = link_to "Cancel", admin_root_path, :class => "btn"
